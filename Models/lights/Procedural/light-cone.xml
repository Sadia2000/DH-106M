<?xml version="1.0" encoding="ISO-8859-1"?>

 <PropertyList>

   <path>petitcone.ac</path>
   <nopreview/>

   <animation>
     <object-name>PetitCone</object-name>
   </animation>

   <animation>
     <type>noshadow</type>
     <object-name>PetitCone</object-name>
   </animation>

   <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
     <object-name>PetitCone</object-name>
   </effect>

   <effect>
     <inherits-from>Effects/light-cone</inherits-from>
     <object-name>PetitCone</object-name>
   </effect>

   <animation>
     <type>material</type>
     <object-name>PetitCone</object-name>
     <emission>
       <red>   2 </red>
       <green> 2 </green>
       <blue>  2 </blue>
     </emission>
   </animation>

   <animation>
     <type>select</type>
     <object-name>PetitCone</object-name>
     <condition>
       <property>controls/lighting/landing-lights</property>
     </condition>
   </animation>

   <animation>
    <type>select</type>
    <object-name>ProceduralLandingLight</object-name>
    <nopreview/>
    <condition>
      <property>controls/lighting/landing-lights</property>
    </condition>
  </animation>

  <light>
    <name>ProceduralLandingLight</name>
    <type>spot</type>
    <direction>
      <lookat-x-m> -20 </lookat-x-m>
      <lookat-y-m>   0 </lookat-y-m>
      <lookat-z-m>  -3 </lookat-z-m>
    </direction>
    <ambient>
      <r> 0.95 </r>
      <g> 0.95 </g>
      <b> 0.95 </b>
      <a> 1.00 </a>
    </ambient>
    <diffuse>
      <r> 0.95 </r>
      <g> 0.95 </g>
      <b> 0.95 </b>
      <a> 1.00 </a>
    </diffuse>
    <specular>
      <r> 0.95 </r>
      <g> 0.95 </g>
      <b> 0.95 </b>
      <a> 1.00 </a>
    </specular>
    <attenuation>
      <c> 1.0000 </c>
      <l> 0.0070 </l>
      <q> 0.0002 </q>
    </attenuation>
    <spot-exponent>5</spot-exponent>
    <spot-cutoff>89</spot-cutoff>
    <range-m>300</range-m>
    <debug-color>
      <r> 1 </r>
      <g> 1 </g>
      <b> 1 </b>
      <a> 1 </a>
    </debug-color>
  </light>

  <animation>
    <type>noshadow</type>
    <object-name>PetitCone</object-name>
    <object-name>ProceduralLandingLight</object-name>
  </animation>

</PropertyList>
