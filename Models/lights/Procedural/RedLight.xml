<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <animation>
    <type>select</type>
    <object-name>navlightred</object-name>
    <condition>
      <property>/controls/lighting/nav-lights</property>
    </condition>
  </animation>

  <light>
    <name>navlightred</name>
    <type>point</type>
    <direction>
      <lookat-x-m> -13 </lookat-x-m>
      <lookat-y-m> -13 </lookat-y-m>
      <lookat-z-m> 0.53 </lookat-z-m>
    </direction>
    <ambient>
      <r> 1.0 </r>
      <g> 0.1 </g>
      <b> 0.1 </b>
      <a> 1.0 </a>
    </ambient>
    <diffuse>
      <r> 1.0 </r>
      <g> 0.1 </g>
      <b> 0.1 </b>
      <a> 1.0 </a>
    </diffuse>
    <specular>
      <r> 1.0 </r>
      <g> 0.1 </g>
      <b> 0.1 </b>
      <a> 1.0 </a>
    </specular>
    <attenuation>
      <c> 1.0 </c>
      <l> 1.4 </l>
      <q> 3.6 </q>
    </attenuation>
    <range-m>10</range-m>
    <debug-color>
      <r> 1 </r>
      <g> 0 </g>
      <b> 0 </b>
      <a> 1 </a>
    </debug-color>
  </light>

  <animation>
    <type>noshadow</type>
    <object-name>navlightred</object-name>
  </animation>

</PropertyList>
