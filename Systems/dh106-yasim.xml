  <wing x="1.600" y="0" z="-2.494"
        chord="9.491"
        length="7.640"
        taper="0.64"
        sweep="12"
        camber="0.005">
        <slat    start="0"    end="1"     aoa="2"   drag="1.2"/>
        <stall     aoa="20" width="1"    peak="1.5"/>
        <flap0   start="0.58" end="1.00" lift="1.6" drag="1.8"/>
        <spoiler start="0.35" end="0.50" lift="0.3" drag="3.0"/>

        <control-input  control="SLAT"    axis="/surface-positions/flap-pos-norm"/>
        <control-input  control="FLAP0"   axis="/controls/flight/flaps"/>
        <control-input  control="SPOILER" axis="/controls/flight/spoilers"/>

        <control-output control="FLAP0"   prop="/surface-positions/slats"/>
        <control-output control="FLAP0"   prop="/surface-positions/flaps-pos-norm"/>
        <control-output control="SPOILER" prop="/surface-positions/speedbrake-pos-norm"/>

        <control-speed  control="FLAP0"   transition-time="8"/>
        <control-speed  control="SPOILER" transition-time="5"/>
  </wing>

  <wing x="0.011" y="7.473" z="-2.494"
        append="1"
        chord="6.074"
        length="10.4"
        taper="0.40"
        sweep="16"
        dihedral="4">
        <slat    start="0"    end="1"     aoa="2"   drag="0.3"/>
        <stall     aoa="20" width="1"    peak="1.5"/>
        <flap0   start="0.00" end="0.38" lift="1.6" drag="0.2"/>
        <flap1   start="0.38" end="0.91" lift="1.9" drag="0.6"/>

        <control-input  control="SLAT"    axis="/surface-positions/flap-pos-norm"/>
        <control-input  control="FLAP0"   axis="/controls/flight/flaps"/>
        <control-input  control="FLAP1"   axis="/controls/flight/aileron"      split="true"/>
        <control-input  control="FLAP1"   axis="/controls/flight/aileron-trim" split="true"/>

        <control-output control="FLAP0"   prop="/surface-positions/flaps-pos-norm"/>
        <control-output control="FLAP0"   prop="/surface-positions/slats"/>
        <control-output control="FLAP1"   side="left"  prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1"   side="right" prop="/surface-positions/right-aileron-pos-norm"/>

        <control-speed  control="FLAP0"   transition-time="8"/>
  </wing>

  <hstab x="-13.584" y="0" z="-0.481"
         chord="3.749"
         length="7.235"
         taper="0.46"
         sweep="5"
         dihedral="10">
         <stall   aoa="18" width="1" peak="1.5"/>
         <flap0 start="0"    end="1" lift="1.2" drag="1.1"/>

         <control-input  control="FLAP0" axis="/controls/flight/elevator"/>
         <control-input  control="FLAP0" axis="/controls/flight/elevator-trim"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-13.900" y="0.00" z="-0.669"
         chord="3.752"
         length="5.230"
         taper="0.30"
         sweep="0">
         <stall   aoa="16" width="1" peak="1.5"/>
         <flap0 start="0"    end="1" lift="1.2" drag="1.1"/>

         <control-input  control="FLAP0" axis="/controls/flight/rudder"      invert="true"/>
         <control-input  control="FLAP0" axis="/controls/flight/rudder-trim" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <!-- Engines   source            : http://en.wikipedia.org/wiki/Rolls-Royce_Avon

